{
  "name": "@shiflo/ui",
  "description": "Shiflo React UI Components",
  "version": "0.0.0",
  "type": "module",
  "files": [
    "dist"
  ],
  "exports": {
    "./*": {
      "import": "./dist/components/*/index.mjs",
      "types": "./dist/components/*/index.d.ts"
    },
    "./theme/ThemeProvider": {
      "import": "./dist/theme/ThemeProvider.mjs",
      "types": "./dist/theme/ThemeProvider.d.ts"
    },
    "./theme/typing": {
      "types": "./dist/theme/typing.d.ts"
    }
  },
  "sideEffects": false,
  "keywords": [
    "react",
    "react-component",
    "component",
    "ui",
    "ui-component"
  ],
  "author": {
    "name": "kimjh96",
    "email": "kimjhs@kakao.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shiflo/shiflo-ui.git"
  },
  "bugs": {
    "url": "https://github.com/shiflo/shiflo-ui/issues",
    "email": "kimjhs@kakao.com"
  },
  "license": "MIT",
  "scripts": {
    "build": "vite build",
    "watch": "vite build --watch",
    "prettier": "prettier --write --config ./.prettierrc \"**/*.{js,mjs,ts,jsx,tsx,mts,json,html}\"",
    "convention": "pnpm prettier && eslint --fix \"**/*.{js,mjs,ts,jsx,tsx,mts}\"",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "prepare": "husky",
    "prepublishOnly": "pnpm build"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.5",
    "@eslint/js": "^9.22.0",
    "@storybook/addon-essentials": "^8.6.4",
    "@storybook/addon-interactions": "^8.6.4",
    "@storybook/addon-onboarding": "^8.6.4",
    "@storybook/blocks": "^8.6.4",
    "@storybook/react": "^8.6.4",
    "@storybook/react-vite": "^8.6.4",
    "@storybook/test": "^8.6.4",
    "@types/bun": "latest",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react-swc": "^3.8.0",
    "csstype": "^3.1.3",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-import-resolver-typescript": "^3.8.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-storybook": "^0.11.4",
    "glob": "^11.0.1",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.3",
    "storybook": "^8.6.4",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.26.0",
    "vite": "^6.2.1",
    "vite-plugin-dts": "^4.5.3",
    "vite-plugin-svgr": "^4.3.0"
  },
  "peerDependencies": {
    "basic-styled": ">=0.1.7",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "lint-staged": {
    "*.{js,mjs,ts,jsx,tsx,mts,json,html}": "prettier --write",
    "*.{js,mjs,ts,jsx,tsx,mts}": "eslint --fix"
  }
}
